---
interface Props {
  class?: string
  copyStart?: number
  copyEnd?: number
}

const {copyStart = 2011, copyEnd = new Date().getUTCFullYear()} = Astro.props

const copyRange = `${copyStart}${copyStart === copyEnd ? '' : `â€“${copyEnd}`}`
---

<style>
